@model IEnumerable<CryptoDCAResult>



<div class="card">
    <div class="card-header bg-white text-center text-dark font-weight-bold">
        <h3 class="text-center">DCA Investment Results</h3>
    </div>
    <div class="card-body">
        <table class="table" border="1">
            <thead class="text-info bg-light">
                <tr>
                    <th>Date</th>
                    <th>Invested Amount (EUR)</th>
                    <th>Cryptocurrency Amount</th>
                    <th>Value Today (EUR)</th>
                    <th>ROI (%)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model)
                {
                    <tr>
                        <td>@result.Date.ToString("yyyy-MM-dd")</td>
                        <td>@result.InvestedAmount</td>
                        <td>@result.CryptoAmount</td>
                        <td>@result.ValueToday</td>
                        <td>@result.ROI</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="card-footer">
            <a asp-action="Calculator" class="btn btn-primary">Back to Crypto DCA Calculator page</a>
        </div>
    </div>

   